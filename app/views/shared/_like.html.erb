<% if user_signed_in? %>
  <% if @idea.like_user(current_user.id) %>
    <%= button_to idea_like_path(like, idea_id: idea.id), method: :delete, id: "like-button", remote: true do %>
      <%#= image_tag("icon_red_heart.svg") %>
      <span>
        <%= @idea.likes_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to idea_likes_path(@idea), id: "like-button", remote: true do %>
      <%#= image_tag("icon_heart.svg") %>
      <span>
        <%= @idea.likes_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <%#= image_tag("icon_heart.svg") %>
    <span>
      <%= @idea.likes_count %>
    </span>
<% end %>